<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">
<ImageView
    android:layout_width="0dp"
    android:layout_weight="2"
    android:id="@+id/uploaded_pic_iv"
    android:layout_height="80dp"
    android:src="@drawable/m1"/>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_weight="5"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="阿萨范德萨发生放假啊健身房垃圾"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="26dp"
            android:layout_marginStart="26dp"
            android:textColor="#2d2c2c"
            android:id="@+id/uploaded_describe_tv" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="￥120"
            android:textColor="#f00"
            android:id="@+id/uploaded_price_tv"
            android:layout_below="@id/uploaded_describe_tv"
            android:layout_alignLeft="@id/uploaded_describe_tv"
            android:layout_alignStart="@id/uploaded_describe_tv"
            android:layout_marginBottom="27dp" />
    </RelativeLayout>
</LinearLayout>
